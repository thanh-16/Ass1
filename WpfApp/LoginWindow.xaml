<Window x:Class="WpfApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfApp"
        Title="Login" Height="200" Width="350" WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20" VerticalAlignment="Center">
        <Grid Margin="0,0,0,10">
            <TextBox x:Name="UsernameBox"
                     Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="Username"
                       Foreground="Gray"
                       Margin="5,2,0,0"
                       IsHitTestVisible="False"
                       VerticalAlignment="Center"
                       Opacity="0.6"
                       Visibility="{Binding Text, ElementName=UsernameBox}"/>
        </Grid>
        <PasswordBox Margin="0,0,0,10" x:Name="PasswordBox"/>
        <Button Content="Login" Command="{Binding LoginCommand}" CommandParameter="{Binding ElementName=PasswordBox, Path=Password}"/>
    </StackPanel>
</Window>