<Window x:Class="WpfApp.AddEditCustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Khách hàng" Height="320" Width="350" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20">
        <TextBlock Text="Tên công ty:"/>
        <TextBox x:Name="CompanyNameBox" Margin="0,0,0,10"/>
        <TextBlock Text="Tên liên hệ:"/>
        <TextBox x:Name="ContactNameBox" Margin="0,0,0,10"/>
        <TextBlock Text="Chức vụ:"/>
        <TextBox x:Name="ContactTitleBox" Margin="0,0,0,10"/>
        <TextBlock Text="Địa chỉ:"/>
        <TextBox x:Name="AddressBox" Margin="0,0,0,10"/>
        <TextBlock Text="Số điện thoại:"/>
        <TextBox x:Name="PhoneBox" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Lưu" Width="70" Margin="0,0,10,0" Click="Save_Click"/>
            <Button Content="Hủy" Width="70" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>